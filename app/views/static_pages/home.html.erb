<% if logged_in? %>
<div class="center jumbotron">
  <h1>Welcome to Vegas Volunteer</h1>

  <h2>Click below to get started!</h2>
  <%= link_to "Find Jobs", listings_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "List Jobs", signup_path, class: "btn btn-lg btn-primary" %>
</div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="listing_form">
        <%= render 'shared/listing_form' %>
      </section>
    </aside>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Vegas Volunteer</h1>

  <h2>Click below to get started!</h2>
  <%= link_to "Find Jobs", listings_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "List Jobs", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>  